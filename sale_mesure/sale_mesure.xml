<!-- ===================== This is from layout for mesure.mesure =============================-->

          <record model="ir.ui.view" id="view_measure_form">
            <field name="model">measure.measure</field>
	     <field name="type">form</field>
            <field name="arch" type="xml">
              <sheet>
		<h1><label string="Measure Page"/></h1>
                <form string="Measure">
		  <group col="4">
		    <field name="product_id" string = "Produit"/> 
		    <field name="partner_id" string = "Pratner"/>
		  </group>
		  <separator string="The measuring elements" />
		   <group col="4">
		    <field name="qty" string = "Qantité"/> 
		    <field name="tested_size" string = "Taille essayée"/>
		    <field name= "vor_attitude_VOR" string =" Attitude VOR"/>
		    <field name ="short_neck_back_amount_TDD" string ="Montant dos cou court-cou long TDD"/> 
		    <field name="shoulder_height_left_HEPL" string ="Hauteur épaule Gauche HEPG" /> 
		    <field name="shoulder_eight_right_HEPR" string ="Hauteur épaule Droite HEPD"/>
		    <field name ="progress_before_AVD" string ="Avancement devant AVD"/>
		    <field name ="shoulder_behind_EPAB" string ="Epaule Arriére EPA "/> 
		    <field name ="shoulder_forward_EPAF" string ="Epaule Avant EPA"/>
		    <field name ="strong_chest_DED" string ="Poitrine forte (dvpmt devant) DED"/>
		    <field name ="forcing_chest_clip_FPP" string ="Forcer pince poitrine FPP" />	
		    <field name ="shoulders_CAR" string ="1/2 Carrure CAR"/>
		    <field name="shoulder_width_LEP" string ="Largeur épaule LEP"/>
		    <field name="armhole_Edge_CAM" string = "Carré d'emmanchure CAM"/>
		    <field name ="belt_CEI" string ="1/2 Ceinture CEI"/> 
		    <field name ="basin_LBA" string ="1/2 Bassin LBA" />
		    <field name ="clip_in_reverse_PSR" string ="Pince sous revers PSR"/>
		    <field name ="hollow_kidneys_CBR" string ="Reins Creux CBR"/>
		    <field name="length_Dos_LON" string ="Longueur Dos LAN"/>
		    <field name="sleeve_length_left_MANG" string ="Longueur manche Gauche"/>
		    <field name="sleeve_length_right_MAND" string ="Longueur manche Droite" /> 
		  </group>        
	      </form>
            </sheet>
            </field>
        </record>
	  
<!-- ===================== This is filtre layout for mesure.mesure =============================-->

          <record model="ir.ui.view" id="measure_search">
            <field name="model">measure.measure</field>
            <field name="arch" type="xml">
             <search>
		
		<filter string="Measure With Order"
		domain="[('sale_line_ids','!=', False)]"/>
		<filter string="Measure Without Order"
	       domain="[('sale_line_ids','=',False)]"/>
	    </search>
            </field>
        </record>
	  
<!-- ===================== This is from layout for sale.order.line =============================-->

	<record model="ir.ui.view" id="detail_measure_field_in_view">
	    <field name="name">New Sale Measure</field>
	    <field name="model">sale.order</field>
	    <field name="inherit_id" ref="sale.view_order_form"/>
	    <field name="arch" type="xml">
		<xpath expr="//form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='name']" position="before">  
		 <field name = "measure_id" string = "Mesaure" 
		  context="{'default_search_partner_id': parent.partner_id,'default_search_product_id': product_id}"/>
		
		</xpath>
	    </field>
	</record>
	
	
	<record id="act_partner_2_measure" model="ir.actions.act_window">
            <field name="name">Measure</field>
            <field name="res_model">measure.measure</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph</field>
	    <field name = "domain" > [('partner_id','=',active_id)]</field>
        </record>
	
	
	<record model="ir.ui.view" id="detail_field_in_view">
	    <field name="name">Measure</field>
	    <field name="model">res.partner</field>
	    <field name="inherit_id" ref="base.view_partner_form"/>
	    <field name="arch" type="xml">
		<xpath expr="//form/sheet/div[@name='buttons']" position="inside">
		   
		 <button class="oe_inline oe_stat_button" name="%(act_partner_2_measure)d"
				 type="action"
				 string="Measure"
				 icon="fa-star"
			       
				 />
		</xpath>
	    </field>
	</record>
	
      
<!--    domain="[('sale_id.partner_id','=',parent.partner_id)]"-->
      
