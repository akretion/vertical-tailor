<openerp>
    <data>
        <record model="ir.ui.view" id="view_partner_measure_tree">
            <field name="model">partner.measure</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Measure" colors="grey:active==False">
                    <field name="date"/>
                    <field name="stature"/>
                    <field name="weight"/>
                    <field name="chest_size"/>
                    <field name="waistline"/>
                    <field name="head_size"/>
                    <field name="leg_length"/>
                    <field name="crotch"/>
                    <field name="pelvis_size"/>
                    <field name="active" invisible="True"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_partner_measure_form">
            <field name="model">partner.measure</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Measure">
                    <sheet>
                        <h1><label string="Measure Page"/></h1>
                        <group col="4">
                            <field name="date"/>
                            <field name="stature"/>
                            <field name="weight"/>
                            <field name="chest_size"/>
                            <field name="waistline"/>
                            <field name="head_size"/>
                            <field name="leg_length"/>
                            <field name="crotch"/>
                            <field name="pelvis_size"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
</data>
</openerp>
